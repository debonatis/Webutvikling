<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <application>
    
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>no</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>Properties.texts</base-name>
            <var>texts</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/templates/input.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{treningsOktBehandler.oppdater()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/templates/overview1.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <validator>
        <validator-id>sjekk</validator-id>
        <validator-class>com.corejsf.ValidatorTekst</validator-class>
    </validator>
    <navigation-rule>
        <from-view-id>/templates/overview1.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{treningsOktBehandler.oppdater()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/templates/overview1.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/admin/*</from-view-id>
        <navigation-case>
            <from-action>#{bruker.logout()}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/login/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/templates/*</from-view-id>
        <navigation-case>
            <from-action>#{bruker.logout()}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/login/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
</faces-config>
